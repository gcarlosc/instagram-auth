<% @cards.each do |card| %>
  <label class="card-label">
    <%= radio_button_tag 'selected_card', card.id, false, class: "card-radio" %>
    <span class="radio-button-style"></span>
    <%= "#{card.payment_method} finalizada en #{card.last_four_digits}" %>
  </label>
<% end %>
<%= link_to 'Agregar método de pago', new_card_subscriptions_path, class: "add-payment-method-button" %>





<style>
.card-label {
  display: block;
  margin-bottom: 10px;
  position: relative;
}

.card-radio {
  /* Hide default radio button */
  opacity: 0;
  position: absolute;
  left: 0;
}

.radio-button-style {
  /* Define styles for the custom radio button appearance */
  display: inline-block;
  width: 10px; /* Adjust width */
  height: 10px; /* Adjust height */
  border: 2px solid #999;
  border-radius: 50%;
  margin-right: 4px;
  position: relative;
}

.radio-button-style:before {
  content: '';
  display: block;
  width: 6px; /* Adjust width */
  height: 6px; /* Adjust height */
  background-color: #999;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0);
  transition: transform 0.2s ease-out;
}

.card-radio:checked + .radio-button-style:before {
  transform: translate(-50%, -50%) scale(1);
}

.add-payment-method-button {
  /* Define styles for the "Agregar método de pago" link */
  display: inline-block;
  padding: 8px 16px;
  background-color: #007bff;
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
}

.add-payment-method-button:hover {
  background-color: #0056b3;
}

</style>
